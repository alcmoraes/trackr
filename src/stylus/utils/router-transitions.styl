/**
 * Used for React Router pages transitions
 *
 * @author Alexandre Moraes | http://github.com/kalvinmoraes
 */

.apps-wrapper
    position relative

.app-screen
    position absolute
    width 100%
    height 100%

.swap-enter
    opacity: 0
    transition all .5s ease-in
    &.swap-enter-active
        opacity: 1

.swap-leave
    opacity 1
    transition all .5s ease-in
    &.swap-leave-active
        opacity 0
